@model UsuariosCatalogoViewModel;
@{
    ViewData["Title"] = "Empleados Registrados";
}
@section Styles{
<link rel="stylesheet" type="text/css" href="~/assets/datatables/DataTables-1.11.4/css/jquery.dataTables.css" />

}

<div class="container"> <br /> </div> @*espacio*@
<div class="container">
    <div class="card">
        <div class="container py-4 px-4">
            <h1 class="display-4 text-center"> Empleados </h1>

            @if (Model.Usuarios is not null)
            {
                <div class="float-right">
                    <button id="btn-add-user" type="button" class="btn btn-success btn-sm">
                        <i class="small material-icons">add</i>
                    </button>
                    <button id="btn-see-user" type="button" class="btn btn-primary btn-sm">
                        <i class="small material-icons">remove_red_eye</i>
                    </button>
                    <button id="btn-edit-user" type="button" class="btn btn-info btn-sm">
                        <i class="small material-icons">edit</i>
                    </button>
                    <button id="btn-delete-user" type="button" class="btn btn-danger btn-sm">
                        <i class="small material-icons">delete</i>
                    </button>
                </div>

                <table id="tableUsers" class="table table-striped table-bordered">
                    <thead>
                        <tr>

                            <th scope="col"># &nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th scope="col">Codigo empleado</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido Paterno</th>
                            <th scope="col">ROL</th>
                            <th scope="col">Fecha de creacion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr>
                                <td>
                                    @usuario.id
                                </td>
                                <td> @usuario.numeroEmpleado</td>
                                <td> @usuario.nombre </td>
                                <td> @usuario.apellidoPaterno </td>
                                <td> @usuario.tipoUsuarioDTO.cNombre </td>
                                <td> @usuario.fechaCreacion </td>


                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Comprueba tu conexion a internet, si el problema persiste llama a un administrador
                </div>
            }
        </div>
    </div>
</div>

<div class="modal " id="modal" tabindex="-2" role="dialog" aria-labelledby="myModal" aria-hidden="true"></div>

@section Scripts{
<script type="text/javascript" src="~/assets/datatables/DataTables-1.11.4/js/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/scripts/UsuariosController/CatalogoUsuarios.js"></script>
<script type="text/javascript" src="~/scripts/Helpers/EnviarControlador.js"></script>
<script type="text/javascript" src="~/scripts/Modal/Modal.js"></script>

}