@{

}
@model CatTipoUsuarioViewModel;
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
}


@section header{
<div class="text-center">
    <h1 class="display-4 ">Agregar usuario</h1>
</div>
}

<form id="form-create-user" >
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Nombre</span>
            </h5>
        </label>
        <input type="text" class="form-control" id="nombre">
    </div>
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Apellido Paterno</span>
            </h5>
        </label>
        <input type="text" class="form-control" id="apellidoPaterno" />
    </div>
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Apellido Materno</span>
            </h5>
        </label>
        <input type="text" class="form-control" id="apellidoMaterno" />
    </div>
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Numero de empleado</span>
            </h5>
        </label>
        <input type="number" class="form-control" id="numeroEmpleado">
    </div>
    <div class="form-group">
        <label class="text-dark"><h5> Nombre de usuario</h5></label>
        <div class="form-group">
            <label class="bmd-label-floating text-dark">Se usara para acceder al sistema. Ej: noe.couoh</label>
            <input class="form-control" type="text" id="nombreUsuario" />
        </div>
    </div>
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Contraseña</span>
            </h5>
        </label>
        <input type="password" class="form-control" id="contrasenia">
    </div>
    <div class="form-group">
        <label for="tiposUsuario">Tipo de usuario</label>
        <select class="form-control" id="tiposUsuario">
            @foreach (var usuarios in Model.tiposUsuario)
            {
                <option> @usuarios.cNombre </option>
            }

        </select>
    </div>
</form>

@section footer{
    <button class="btn btn-primary" type="submit" id="btnGuardar">Guardar</button>
}
@section scripts{
    <script type="text/javascript" src="~/scripts/UsuariosController/Api.js"></script>

}