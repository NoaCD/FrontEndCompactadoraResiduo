@model ItemCargaViewModel;

@{
    Layout = "~/Views/Shared/Modal.cshtml";
}

@section header{
<h1 class="display-4 text-center">Datos</h1>
}
@if (Model.Carga is not null)
{

    <div class="col-sm-12">
        <div class="card shadow p-3 bg-primary" style="20rem;">
            <div class="card-header text-center"> <h4> <b>@Model.Carga.nombreResiduo - @Model.Carga.codigoResiduo </b></h4> <hr style="background-color:white" /> </div>
            <div class="container">
                <h5 class="card-title text-center"><b> Responsable al cargar: </b> </h5>
                <p class="card-text text-center">
                    @Model.Carga.nombreEmpleado @Model.Carga.apellidoPaterno 
                </p>
                <h5 class="card-title text-center"><b> Numero de empleado: </b> </h5>
                <p class="card-text text-center">
                    @Model.Carga.numeroEmpleado
                </p>
                <h5 class="card-title text-center"><b> Tipo de usuario: </b> </h5>
                <p class="card-text text-center">
                    
                </p>

                <h5 class="card-title text-center"><b> Peso Bruto : </b> </h5>
                <p class="card-text text-center">
                    
                </p>

                <h5 class="card-title text-center"><b> Fecha de alta: </b></h5>
                <p class="card-text text-center">
                    @Model.Carga.fechaCreacionCarga
                </p>
                <h5 class="card-title text-center"><b> Fecha de modificacion: </b></h5>

                @if (Model.Carga.fechaModificacion is null)
                {
                    <p class="card-text text-center">
                        No se ha modificado
                    </p>

                }
                else
                {
                    <p class="card-text text-center">
                        @Model.Carga.fechaModificacion
                    </p>
                }



            </div>
        </div>
    </div>



}
else
{
    <div class="alert alert-warning text-center" role="alert">
        Los datos no se cargaron
    </div>
}

@section footer{
<button class="btn btn-block btn-primary" type="button" data-dismiss="modal">Ok!</button>
}


