@model ProveedoresViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Proveedores";
}
@section Styles{
<link rel="stylesheet" href="~/assets/personal_style/cardsResiduos.css" />
<link rel="stylesheet" type="text/css" href="~/assets/datatables/DataTables-1.11.4/css/jquery.dataTables.css" />

}


<div class="container"> <br /> </div> @*espacio*@
<div class="container">
    <div class="card">
        <div class="container py-4 px-4">
            <h1 class="display-4 text-center"> Proveedores </h1>
            <div class="float-right">
                <button id="btn-add-proveedor" type="button" class="btn btn-success btn-sm">
                    <i class="small material-icons">add</i>
                </button>
                <button id="btn-see-proveedor" type="button" class="btn btn-primary btn-sm">
                    <i class="small material-icons">remove_red_eye</i>
                </button>
                <button id="btn-edit-proveedor" type="button" class="btn btn-info btn-sm">
                    <i class="small material-icons">edit</i>
                </button>
                <button id="btn-delete-proveedor" type="button" class="btn btn-danger btn-sm">
                    <i class="small material-icons">delete</i>
                </button>
            </div>

            <table id="tableProveedores" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col"># &nbsp;&nbsp;&nbsp;&nbsp;</th>
                        <th scope="col">Nombre </th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Detalles</th>
                        <th scope="col">Fecha de alta</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.proveedores.Count <= 0)
                    {
                        <div class="alert alert-warning" role="alert">|
                            No hay datos
                        </div>
                    }
                    else
                    {
                        @foreach (var proveedor in Model.proveedores)
                        {
                            <tr>
                                <th> @proveedor.id </th>  @*@usuario.id*@
                                <th> @proveedor.nombre </th>
                                <th> @proveedor.descripcion </th>
                                <th> @proveedor.direccion </th>
                                <th> @proveedor.fechaCreacion </th>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal " id="modal" tabindex="-2" role="dialog" aria-labelledby="myModal" aria-hidden="true"></div>

@section Scripts{
<script type="text/javascript" src="~/assets/datatables/DataTables-1.11.4/js/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/scripts/ProveedoresController/CatalogoProveedor.js"></script>
<script type="text/javascript" src="~/scripts/Modal/Modal.js"></script>
}