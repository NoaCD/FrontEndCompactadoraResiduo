    Modal para crear un proveedor 
*@
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
}

@section header{
<link href="~/assets/personal_style/CrearEmpleadoStylesheet.css" rel="stylesheet" />

<div class="text-center">
    <h1 class="display-4 ">Agregar proveedor</h1>
</div>
}

<form id="form-create-proveedor" name="form-create-proveedor">
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Nombre</span>
            </h5>
        </label>
        <input type="text" class="form-control" id="nombre" name="nombre" />
    </div>
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark">Direccion</span>
            </h5>
        </label>
        <input type="text" class="form-control" id="direccion" name="direccion" />
    </div>
    <div class="form-group">
        <label class="bmd-label-floating">
            <h5>
                <span class="tim-note text-dark"> RFC </span>
            </h5>
        </label>
        <input type="text" class="form-control" id="rfc" name="rfc" />
    </div>
   <div class="form-group">
        <label for="descripcion">
            <h5>
                <span class="tim-note text-dark">Descripcion</span>
            </h5>
        </label>
        <textarea class="form-control" id="descripcion" name="descripcion" rows="3" maxlength="195" placeholder="Breve descripcion, maximo 195 caracteres" required></textarea>
    </div>
    <br />
    <button id="btn-save-proveedor" type="button" class="btn-block btn btn-success"> Guardar </button>
</form>

@section scripts{
    <script type="text/javascript" src="~/scripts/ProveedoresController/GuardarProveedor.js"></script>
}